<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.aafactory.sample">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--https://github.com/medyo/Fancybuttons-->
        <activity
            android:name="mehdi.sakout.fancybuttons.samples.MainActivity">
        </activity>
        <activity
            android:name="mehdi.sakout.fancybuttons.samples.XmlButtons"
            android:label="@string/title_activity_xml_buttons"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="mehdi.sakout.fancybuttons.samples.ProgramButtons"
            android:label="@string/title_activity_program_buttons"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!--https://github.com/Tapadoo/Alerter-->
        <activity
            android:name="com.tapadoo.alerter.sample.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>
</manifest>