<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_double">
    <TextView
        android:id="@+id/action_path_data"
        android:padding="@dimen/spacing_double"
        android:text="@string/action_path_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/action_poi_data"
        android:padding="@dimen/spacing_double"
        android:text="@string/action_poi_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/action_scale_factor"
        android:padding="@dimen/spacing_double"
        android:text="@string/action_scale_factor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/action_my_location"
        android:padding="@dimen/spacing_double"
        android:text="@string/action_my_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
